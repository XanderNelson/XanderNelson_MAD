<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="fordTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/fordblue</item>
        <item name="colorPrimaryDark">@color/darkFordBlue</item>
        <item name="colorAccent">@color/accentFord</item>
        <item name="android:textColor">@color/yellowFord</item>
        <item name="android:background">@color/greyFord</item>
    </style>
</resources>
